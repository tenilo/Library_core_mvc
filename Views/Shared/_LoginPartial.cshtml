@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
     
        <a id="manage" class="nav-item nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    
    
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-item nav-link active">Logout</button>
        </form>
    
}
else
{
    
        <a class="nav-item nav-link active" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    
    
        <a class="nav-item nav-link active" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    
}

